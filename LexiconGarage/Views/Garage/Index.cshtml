@model IEnumerable<LexiconGarage.Models.Vehicle>

@{
    ViewBag.Title = "Garage";
}

<h3>Fordon i garaget:</h3>


@if (Model.Count() == 0){
    <tr><td colspan="10">Listan är tom</td></tr>
}
else if (Model.Count() > 0){
    <tr><td colspan="10">Antal fordon: @Model.Count()</td></tr>
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        <thead>
            <tr>
                <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.Type)</th>
                <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.RegNo)</th>
                <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.Owner)</th>
                <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.ParkingTime)</th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Type)</td>
                <td>@Html.DisplayFor(modelItem => item.RegNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Owner)</td>
                <td>@Html.DisplayFor(modelItem => item.ParkingTime)</td>
                <td>
                    @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Info", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Checka ut", "CheckOut", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}

