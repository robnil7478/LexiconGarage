@model IEnumerable<LexiconGarage.Models.VehicleType>

@{
    ViewBag.Title = "Index";
}

<h3>Fordonstyper</h3>

<h4 class="error-message">@ViewBag.ErrorMessage</h4>
<h4 class="info-message">@ViewBag.InfoMessage</h4>

<p>
    @Html.ActionLink("Lägg till ny fordonstyp", "Create")
</p>
<table class="table table-bordered table-condensed table-striped table-hover sortable">
    <thead>
        <tr>
            <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.TypeInSwedish)</th>
            <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.NumberOfVehicles)</th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.TypeInSwedish)</td>
            <td>@Html.DisplayFor(modelItem => item.NumberOfVehicles)</td>
            <td>
                @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) 
                @{ if (item.NumberOfVehicles == 0) {
                        <span> | @Html.ActionLink("Ta bort", "Delete", new { id = item.Id })</span>
                    }
                }
                
            </td>
        </tr>
    }

</table>
