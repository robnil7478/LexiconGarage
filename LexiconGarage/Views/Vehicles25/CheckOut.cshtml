@model LexiconGarage.Models.Vehicle

@model LexiconGarage.Models.Vehicle

@{
    ViewBag.Title = "Hämta ut";
}

<h3>Hämta / Checka ut</h3>

<h2>@ViewBag.Message</h2>

<h3>Följande fordon kommer att tas bort från garaget:</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.VehicleType.TypeInSwedish)</dt>
        <dd>@Html.DisplayFor(model => model.VehicleType.TypeInSwedish)</dd>

        <dt>@Html.DisplayNameFor(model => model.RegNo)</dt>
        <dd>@Html.DisplayFor(model => model.RegNo)</dd>

        <dt>@Html.DisplayNameFor(model => model.Member.UserName)</dt>
        <dd>@Html.DisplayFor(model => model.Member.UserName)</dd>

        <dt>@Html.DisplayNameFor(model => model.NumberOfWheels)</dt>
        <dd>@Html.DisplayFor(model => model.NumberOfWheels)</dd>

        <dt>@Html.DisplayNameFor(model => model.Brand)</dt>
        <dd>@Html.DisplayFor(model => model.Brand)</dd>

        <dt>@Html.DisplayNameFor(model => model.Model)</dt>
        <dd>@Html.DisplayFor(model => model.Model)</dd>

        <dt>@Html.DisplayNameFor(model => model.Weight)</dt>
        <dd>@Html.DisplayFor(model => model.Weight)</dd>

        @*<dt>@Html.DisplayNameFor(model => model.ParkingSlot)</dt>
        <dd>@Html.DisplayFor(model => model.ParkingSlot)</dd>*@

        <br />

        <dt>@Html.DisplayNameFor(model => model.ParkingTime)</dt>
        <dd>@Html.DisplayFor(model => model.ParkingTime)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Checka ut" class="btn btn-default" />
            <br /><br /><br />
            @Html.ActionLink("Tillbaka till fordonslistan", "AllVehicles")
        </div>
    }
</div>