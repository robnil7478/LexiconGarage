
@model Tuple<IEnumerable<LexiconGarage.Models.Vehicle>, LexiconGarage.Models.Vehicle>

@{
    ViewBag.Title = "Search";
}

<h3>Sök medlemmar eller fordon</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Item2.Id)


        <div class="form-group">
            @Html.LabelFor(model => model.Item2.RegNo, htmlAttributes: new { @class = "control-label col-md-2" })
            @*<label for="regNoInput" class="title">RegNr</label>*@
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Item2.RegNo, new { @class = "form-control", @autofocus = "autofocus", @id = "regNoInput", @name = "regNo" })
                @Html.ValidationMessageFor(model => model.Item2.RegNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item2.Member.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Item2.Member.UserName, new { @class = "form-control", @id = "regNoInput", @name = "owner" })
                @Html.ValidationMessageFor(model => model.Item2.Member.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item2.Brand, htmlAttributes: new { @class = "control-label col-md-2" })
            @*<label for="brandInput" class="title">Märke</label>*@
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Item2.Brand, new { @class = "form-control", @id = "brandInput", @name = "brand" })
                @Html.ValidationMessageFor(model => model.Item2.Brand, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item2.VehicleType.TypeInSwedish, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VBagVehicleList", null, "", htmlAttributes: new { @class = "form-control", @name = "type" })
                @* Alternativ 2 med 'Dictionary<int, string>' i @model: @Html.DropDownListFor(model => model.Item3, new SelectList(Model.Item3, "Key", "Value"), "Välj fordon", htmlAttributes: new { @class = "dropdown-search", @id = "vehicleTypeInput", @name = "type" })*@
                @Html.ValidationMessageFor(model => model.Item2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" class="btn btn-default" id="searchButton" value="Sök" />*@
                @*<input type="submit" class="btn btn-default" id="allButton" value="Lista alla fordon" />*@
                <input formaction="@Url.Action("SearchVehicles","Vehicles25")" type="submit" class="btn btn-default" id="searchButton" value="Sök" />
                <input formaction="@Url.Action("AllVehicles","Vehicles25")" type="submit" class="btn btn-default" id="allButton" value="Lista alla fordon" />
                <input formaction="@Url.Action("ResetSearch","Vehicles25")" type="submit" class="btn btn-default" id="resetButton" value="Rensa" />
                <br /><br />
            </div>
        </div>


    </div>
}

<br /><br />

@*  Placeholder för PARTIELL VY  'allVehicles'  *@
@*<div id="tabell" class="tabell">*@
@*</div>*@

@*  Exempel på bootstrap 'glyphicons' på table headers <th>. Men det verkar inte ta, med ex-vis data-firstsort="desc"
    <th data-defaultsign="_19"> Employee ID</th>
    <th data-defaultsign="AZ">Name</th>
    <th data-defaultsign="AZ">Title</th>
    <th data-defaultsign="month">Birth Date</th>
    <th data-firstsort="desc">Address</th>
    <th data-defaultsign="AZ">City</th>
    <th data-defaultsort="disabled">Country</th>
*@
<p class="table-info">@ViewBag.SearchTableInfo</p>
@if (Model.Item1.Count() > 0)
{
    <table class="table table-bordered table-condensed table-striped table-hover sortable">
        <thead>
            <tr>
                <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.Item2.RegNo)</th>
                <th data-firstsort="asc" data-defaultsign="AZ">@Html.DisplayNameFor(model => model.Item2.Member.UserName)</th>
                <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.Item2.Brand)</th>
                <th data-defaultsign="AZ">@Html.DisplayNameFor(model => model.Item2.VehicleType.TypeInSwedish)</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model.Item1)
        {

            <tr>
                <td>@Html.DisplayFor(modelItem => item.RegNo)</td>
                <td>@Html.DisplayFor(modelItem => item.Member.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.Brand)</td>
                <td>@Html.DisplayFor(modelItem => item.VehicleType.TypeInSwedish)</td>
                <td>
                    @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Info", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Checka ut", "CheckOut", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}




@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")









